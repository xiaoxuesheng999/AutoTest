[
  {
    "description": "模拟一个post请求",
    "request": {
      "uri": "/postdemo",
      "method": "post"
    },
    "response": {
      "headers": {
        "Content-Type": "text/html;charset=GBK"
      },
      "text": "这是我的第一个mock的post请求"
    }
  },
  {
    "description": "模拟一个带参数的post请求",
    "request": {
      "uri": "/postwithparam",
      "method": "post",
      "forms": {
        "name": "xiaohe",
        "gender": "man"
      }
    },
    "response": {
      "headers": {
        "Content-Type": "text/html;charset=GBK"
      },
      "text": "我来了"
    }
  },
  {
    "description": "模拟一个JSON传参的post请求",
    "request": {
      "uri": "/postwithjson",
      "headers": {
        "Content-Type":"application/json"
      },
      "json": {
        "name": "xiaohe",
        "age":"34"
      }
    },
    "response": {
      "status": 200,
      "json": {
        "code": "200",
        "text": "请求成功"
      }
    }
  }
]